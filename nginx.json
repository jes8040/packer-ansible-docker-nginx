{
    "builders": [{
        "type": "docker",
        "image": "centos:latest",
        "commit": true,
        "run_command": [ "-d", "-t", "-i", "{{.Image}}", "/bin/sh" ], 
        "changes": [
            "VOLUME /data",
            "WORKDIR /data",
            "EXPOSE 80 8080",
            "ENTRYPOINT [\"docker-entrypoint.sh\"]"
        ]
    }],

    "provisioners": [{
        "type": "ansible",
        "user": "root",
        "playbook_file": "provision.yml"
    }],

    "post-processors": [[ {
        "type": "docker-tag",
        "repository": "docker.io/nidr0x/nginx-packer",
        "tag": "latest"
    } ]]
}
